{
  "name": "print-manager-desktop",
  "version": "1.0.0",
  "description": "Приложение для управления принтерами",
  "main": "dist/main/main.js",
  "scripts": {
    "build:main": "tsc -p src/main/tsconfig.json",
    "build:renderer": "tsc -p src/renderer/tsconfig.json",
    "build:typescript": "tsc",
    "build:webpack": "webpack --config webpack.config.js",
    "build": "npm run clean && npm run build:webpack && npm run build:typescript",
    "start": "electron .",
    "dev": "npm run build && npm run start",
    "watch": "tsc -w",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "clean": "rimraf dist",
    "postinstall": "electron-rebuild"
  },
  "build": {
    "appId": "com.yourcompany.printmanager",
    "productName": "Print Manager",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "src/renderer/index.html",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.33",
    "@types/react-dom": "^18.0.11",
    "@types/uuid": "^9.0.1",
    "electron": "^24.0.0",
    "electron-builder": "^23.6.0",
    "electron-rebuild": "^3.2.9",
    "html-webpack-plugin": "^5.6.3",
    "ts-loader": "^9.5.2",
    "typescript": "^5.0.3",
    "usb": "^2.15.0",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@emotion/react": "^11.10.6",
    "@emotion/styled": "^11.10.6",
    "@mui/icons-material": "^5.11.16",
    "@mui/material": "^5.11.16",
    "axios": "^1.3.5",
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.10.0",
    "uuid": "^9.0.0"
  }
}
